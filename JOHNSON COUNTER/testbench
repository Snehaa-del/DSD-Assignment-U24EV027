module tb_johnson_counter;
    reg clk, reset;
    wire [3:0] out;

    johnson_counter uut (
        .clk(clk),
        .reset(reset),
        .out(out)
    );

    initial begin
        $dumpfile("johnson_counter.vcd");
        $dumpvars(0, tb_johnson_counter);
        clk = 0;
        reset = 1;
        #10 reset = 0;
        #200 $finish;
    end

    always #5 clk = ~clk;
endmodule
